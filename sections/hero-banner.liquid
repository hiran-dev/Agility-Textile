<section 
  id="hero-{{ section.id }}"
  class="custom-hero-banner {% if section.settings.image_layout == 'boxed' %}boxed-layout{% endif %}"
  style="background-image: url({{ section.settings.banner_image | image_url: width: 2400 }});"
>
  <div class="hero-container">
    <div class="hero-content">
      {% if section.settings.subheading %}
        <p class="hero-subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.heading %}
        <h1 class="hero-heading">{{ section.settings.heading }}</h1>
      {% endif %}

      {% if section.settings.text %}
        <p class="hero-text">{{ section.settings.text }}</p>
      {% endif %}

      <div class="hero-buttons">
        {% if section.settings.btn1_label %}
          <a href="{{ section.settings.btn1_link }}" class="hero-btn outline">
            {{ section.settings.btn1_label }}
          </a>
        {% endif %}

        {% if section.settings.btn2_label %}
          <a href="{{ section.settings.btn2_link }}" class="hero-btn no-outline">
            {{ section.settings.btn2_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  <style>
    .custom-hero-banner {
      position: relative;
      background-size: cover;
      background-position: center;
      padding: 140px 40px;
      color: #fff;
      width: 100%;
    }

    /* â˜… BOXED MODE (Image constrained to container size) */
    .custom-hero-banner.boxed-layout {
      background: none !important;
      padding: 0;
    }
    #hero-{{ section.id }}.custom-hero-banner.boxed-layout .hero-container {
      background-image: url({{ section.settings.banner_image | image_url: width: 1800 }});
    }

    .custom-hero-banner.boxed-layout .hero-container {
      max-width: 1300px;
      margin: 0 auto 30px;
      padding: 208px 40px;
      {% comment %} background-image: url({{ section.settings.banner_image | image_url: width: 1800 }}); {% endcomment %}
      background-size: cover;
      background-position: center;
    }

    .hero-container {
      max-width: 1300px;
      margin: 0 auto;
    }

    .hero-content {
      max-width: 500px;
    }

    .hero-subheading {
        font-family: Archivo;
        font-weight: 600;
        font-size: 13.5px;
        leading-trim: NONE;
        line-height: 100%;
        letter-spacing: 6%;
        text-transform: uppercase;
        color:#fff;
    }

    .hero-heading {
        font-family: Archivo Narrow;
        font-weight: 600;
        font-style: SemiBold;
        font-size: 24px;
        leading-trim: NONE;
        line-height: 100%;
        letter-spacing: 6%;
        text-transform: uppercase;
        color:#fff;
    }

    .hero-text {
        font-family: Barlow;
        font-weight: 400;
        font-style: Regular;
        font-size: 16px;
        leading-trim: NONE;
        line-height: 100%;
        letter-spacing: 0%;
        text-transform: capitalize;
        margin-bottom:30px;
    }

    .hero-buttons {
      display: flex;
      {% comment %} gap: 20px; {% endcomment %}
    }

    .hero-btn {
        padding: 20.5px 41px;
        text-decoration: none;
        color: #fff;
        font-family: Archivo;
        font-weight: 600;
        font-size: 13px;
        line-height: 100%;
        letter-spacing: 6%;
        text-transform: uppercase;
    }

    {% comment %} .hero-btn.filled {
      background: #fff;
      color: #000;
    }

    .hero-btn.filled:hover {
      opacity: 0.8;
    } {% endcomment %}

    .hero-btn.outline {
        border: 0.5px solid #fff;
    }
    a.hero-btn.no-outline:hover {
        text-decoration: underline;
        text-underline-offset: 8px;
    }
    .hero-btn.outline:hover {
      background: #E2E2E2;
        border: 0.5px solid #1F1F1F;
        color: #222222;
    }

    @media (max-width: 768px) {
      .hero-container {
          text-align: center;
      }
      .hero-heading {
        font-size: 28px;
        line-height: 32px;
        font-weight: 400;
    }
    .hero-btn {
      padding: 16px 20px 14px;
    }
      .hero-text {
        font-size: 16px;
      }
      .custom-hero-banner.boxed-layout .hero-container:after {
          content: "";
          display: block;
          position: absolute;
          width: 100%;
          height: 100%;
          background: #0000006b;
          top: 0;
          left: 0;
      }
     .hero-content {
        position: relative;
        z-index: 1;
        max-width: 210px;
        margin: auto;
    }
    a.hero-btn.outline {
      background: #fff;
      color: #222222 !important;
  }
  .hero-buttons {
    display: flex;
    flex-direction: column;
    margin-top: 40px;
  }
     p.hero-text {
    display: none;
}
    }
  </style>
</section>

{% schema %}
{
  "name": "Custom Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "select",
      "id": "image_layout",
      "label": "Image Layout",
      "default": "full",
      "options": [
        { "value": "full", "label": "Full Width" },
        { "value": "boxed", "label": "Boxed (inside container)" }
      ]
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "btn1_label",
      "label": "Button 1 Label"
    },
    {
      "type": "url",
      "id": "btn1_link",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "btn2_label",
      "label": "Button 2 Label"
    },
    {
      "type": "url",
      "id": "btn2_link",
      "label": "Button 2 Link"
    }
  ],
  "presets": [
    { "name": "Custom Hero Banner" }
  ]
}
{% endschema %}
