<script>
document.addEventListener("DOMContentLoaded", () => {
  if (!window.matchMedia("(min-width: 1025px)").matches) return;
  const DURATION = 2000; // 2 seconds per image

  document.querySelectorAll(".card-wrapper").forEach(card => {
    const mainImg = card.querySelector(".card__media img[data-all-images]");
    if (!mainImg) return;

    const imageUrls = JSON.parse(mainImg.dataset.allImages || "[]").slice(0, 4);
    if (imageUrls.length <= 1) return;

    // Preload images
    const images = imageUrls.map(src => {
      const img = new Image();
      img.src = src;
      return img;
    });

    // Pagination dots
    const pagination = document.createElement("div");
    pagination.className = "product-grid-item__pagination";
    images.forEach((img, i) => {
      const dot = document.createElement("span");
      dot.dataset.gridPage = i;
      dot.style.setProperty("--width", i === 0 ? "100%" : "0%");
      dot.style.setProperty("--duration", `${DURATION}ms`);
      if (i === 0) dot.classList.add("is-active");
      pagination.appendChild(dot);
    });
    card.querySelector(".card__media").appendChild(pagination);

    const dots = pagination.querySelectorAll("span");
    let index = 1; // start from image 2 on hover
    let timeoutId;

    function resetDots() {
      dots.forEach(dot => {
        dot.classList.remove("is-active");
        dot.style.setProperty("--width", "0%");
      });
    }

    function showImage(i) {
      const img = images[i];
      if (!img.complete) {
        // Wait for image to load
        img.onload = () => {
          mainImg.src = img.src;
          mainImg.srcset = img.src;
          animateDot(i);
        };
      } else {
        mainImg.src = img.src;
        mainImg.srcset = img.src;
        animateDot(i);
      }
    }

    function animateDot(i) {
      dots.forEach((dot, idx) => {
        dot.classList.remove("is-active");
        dot.style.setProperty("--width", idx < i ? "100%" : "0%");
      });
      const activeDot = dots[i];
      void activeDot.offsetWidth; // force reflow
      activeDot.classList.add("is-active");
      activeDot.style.setProperty("--width", "100%");
    }

    function cycle() {
      showImage(index);
      index = (index + 1) % images.length;
      timeoutId = setTimeout(cycle, DURATION);
    }

    function start() {
      // On hover, first image already visible (index 0)
      resetDots();
      index = 1; // start from second image
      cycle();
    }

    function stop() {
      clearTimeout(timeoutId);
      resetDots();
      index = 1;
      showImage(0); // reset to first image
    }

    card.addEventListener("mouseenter", start);
    card.addEventListener("mouseleave", stop);
  });
});

